{
  "name": "opuscapita-react-i18n",
  "version": "1.0.3",
  "description": "OpusCapita React I18n Extension",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf esdoc build lib",
    "lint": "eslint src",
    "test": "rimraf ./.nyc_output ./coverage && nyc mocha 'src/**/*.spec.js'",
    "start": "nodemon --watch src/server src/server/demo/index",
    "esdoc": "rimraf esdoc && esdoc -c esdoc.json",
    "npm-build": "rimraf lib && babel --copy-files --no-babelrc --presets es2015,stage-0,react --ignore *.spec.js,*/demo/** src/client --out-dir lib",
    "npm-publish": "npm run npm-build && npm-publish",
    "publish-snapshot": "npm run npm-publish",
    "publish-release": "npm run npm-publish -- --release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OpusCapitaBES/js-react-i18n.git"
  },
  "license": "UNLICENSED",
  "readme": "README.md",
  "dependencies": {
    "opuscapita-i18n": "1.0.7",
    "react": "0.14.8",
    "react-dom": "0.14.8",
    "underscore": "1.8.3"
  },
  "devDependencies": {
    "babel-cli": "6.18.0",
    "babel-core": "6.20.0",
    "babel-eslint": "7.1.1",
    "babel-loader": "6.2.10",
    "babel-plugin-istanbul": "2.0.0",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-0": "6.16.0",
    "babel-register": "6.18.0",
    "chai": "3.5.0",
    "enzyme": "2.6.0",
    "eslint": "3.12.2",
    "eslint-config-opuscapita": "1.0.3",
    "eslint-plugin-react": "6.8.0",
    "express": "4.14.0",
    "mocha": "3.0.2",
    "nodemon": "1.11.0",
    "nyc": "10.0.0",
    "opuscapita-npm-scripts": "1.0.5",
    "opuscapita-showroom-client": "1.0.10",
    "opuscapita-showroom-server": "1.0.10",
    "raw-loader": "0.5.1",
    "react-addons-test-utils": "0.14.7",
    "rimraf": "2.5.4",
    "webpack": "1.14.0",
    "webpack-dev-middleware": "1.9.0"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "reporter": [
      "lcov",
      "text"
    ],
    "require": "./config/mocha-setup.js",
    "include": [
      "src/client/**/*.js"
    ],
    "exclude": [
      "**/*.spec.js",
      "**/*.SCOPE*.js",
      "**/demo/**/*.js"
    ],
    "check-coverage": true,
    "all": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "engines": {
    "node": ">=4.x",
    "npm": ">=2.x"
  }
}
